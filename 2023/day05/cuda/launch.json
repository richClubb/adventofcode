    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug test seed",
            "type": "cuda-gdb",
            "request": "launch",
            "program": "${workspaceFolder}/seed/test/build-x86/test_seeds",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/seed/test/build-x86/",
            "environment": [],
            //"externalConsole": false,
            //"MIMode": "gdb",
            "miDebuggerPath": "/usr/local/cuda-12.8/bin/cuda-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Part A",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/part_a/test/build-x86/test_part_a",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/part_a/test/build-x86/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Day 5 Full Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build-x86/day5",
            "args": [
                "-i",
                "/workspaces/adventofcode/2023/day05/input_reduced.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build-x86/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}